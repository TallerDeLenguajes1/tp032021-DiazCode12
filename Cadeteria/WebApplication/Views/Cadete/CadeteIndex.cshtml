@{

}
@model List<WebApplication.Models.ClaseCadete>

<div>
    <form asp-action="SaveCadete" asp-controller="Cadete" method="post">
        <div>
            <label for="apellido">Apellido:<input type="text" id="apellido" name="apellido" /></label>
        </div>
        <div>
            <label for="nombre">Nombre:<input type="text" id="nombre" name="nombre" /></label>
        </div>
        <div>
            <label for="direccion">Direccion:<input type="text" id="direccion" name="direccion" /></label>
        </div>
        <div>
            <label for="telefono">Telefono:<input type="text" id="telefono" name="telefono" /></label>
        </div>
        <button type="submit">crear Cadete</button>
    </form>
</div>

<div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Apellido</th>
                <th scope="col">Nombre</th>
                <th scope="col">Domicilio</th>
                <th scope="col">Telefono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th>@item.Id</th>
                <td>@item.Apellido</td>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Telefono</td>
                <td>
                    <form asp-action="UpdateCadeteForm" asp-controller="Cadete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit">Editar</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteCadete" asp-controller="Cadete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>