@model WebApplication.Models.ClaseCadete

    <div>
        <form asp-action="UpdateCadete" asp-controller="Cadete" method="post">
           <input type="hidden" name="id" value="@Model.Id" />
            <div>
                <label for="apellido">Apellido:<input type="text" id="apellido" name="apellido" value="@Model.Apellido"/></label>
            </div>
            <div>
                <label for="nombre">Nombre:<input type="text" id="nombre" name="nombre" value="@Model.Nombre"/></label>
            </div>
            <div>
                <label for="direccion">Direccion:<input type="text" id="direccion" name="direccion" value="@Model.Direccion"/></label>
            </div>
            <div>
                <label for="telefono">Telefono:<input type="text" id="telefono" name="telefono" value="@Model.Telefono"/></label>
            </div>
            <button type="submit">Editar Cadete</button>
        </form>
    </div>
